event_services = {
    "Venue": 50000,
    "Catering": 70000,
    "Photography": 25000,
    "Music": 15000,
    "Decoration": 30000,
}

def show_services():
    print("\nğŸ“‹ Available Services:")
    for name, price in event_services.items():
        print(f"- {name}: â‚¹{price}")

def calculate_cost(choices):
    return sum(event_services[s] for s in choices)

def negotiate(base, offer):
    margin = 0.15
    min_acceptable = base * (1 - margin)
    if offer >= base:
        return "âœ… Accepted!", base
    elif offer >= min_acceptable:
        return f"âœ… Deal accepted at â‚¹{offer}", offer
    elif offer >= base * 0.7:
        counter = int((base + offer) / 2)
        return f"ğŸ¤ Counter offer: â‚¹{counter}", counter
    else:
        return "âŒ Offer too low. Rejected.", None

def main():
    show_services()
    selected = input("Enter services (comma-separated): ").title().split(',')
    selected = [s.strip() for s in selected if s.strip() in event_services]
    if not selected:
        print("âš ï¸ No valid service selected.")
        return

    base = calculate_cost(selected)
    print(f"\nğŸ’° Base Cost: â‚¹{base}")
    
    try:
        offer = int(input("ğŸ’¬ Your Offer: â‚¹"))
        message, final_price = negotiate(base, offer)
        print(message)
        if final_price:
            print(f"ğŸ’¼ Final Price: â‚¹{final_price}")
    except ValueError:
        print("â— Enter a valid number.")

main()



